@model List<Team>
@*view needed to print all of the team name buttons out*@ 

<div>
    <a asp-controller="Home" asp-action="Index" asp-route-teamName="">Home</a>
</div>

@foreach (Team t in Model)
{
    <div>
        <a asp-controller="Home" asp-action="Filters" asp-route-teamName="@t.TeamName"
           class="btn @(ViewBag.SelectedTeam == t.TeamName ? "btn-primary" : "btn-outline-secondary")">
            @t.TeamName
        </a>
    </div>
}